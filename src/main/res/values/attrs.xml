<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="AdvancedTextView">
    <!-- Attributes for justified text alignment-->
    <attr format="boolean" name="justifyText"/>

    <!-- Attributes for custom font-->
    <attr format="enum" name="typeface">
      <enum name="aller_bold" value="0"/>
      <enum name="aller_bold_italic" value="1"/>
      <enum name="aller_display" value="2"/>
      <enum name="aller_light" value="3"/>
      <enum name="aller_light_italic" value="4"/>
      <enum name="aller_regular" value="5"/>
      <enum name="amatic_regular" value="6"/>
      <enum name="amatic_bold" value="7"/>
      <enum name="bebas" value="8"/>
      <enum name="capture" value="10"/>
      <enum name="caviar_dreams" value="11"/>
      <enum name="caviar_dreams_bold" value="12"/>
      <enum name="caviar_dreams_bold_italic" value="13"/>
      <enum name="caviar_dreams_italic" value="14"/>
      <enum name="droid_sans" value="15"/>
      <enum name="droid_sans_bold" value="16"/>
      <enum name="journal" value="17"/>
      <enum name="open_sans_bold" value="18"/>
      <enum name="open_sans_bold_italic" value="19"/>
      <enum name="open_sans_italic" value="20"/>
      <enum name="open_sans_light" value="21"/>
      <enum name="open_sans_light_italic" value="22"/>
      <enum name="open_sans_regular" value="23"/>
      <enum name="pacifico" value="24"/>
      <enum name="roboto_regular" value="25"/>
      <enum name="roboto_bold" value="26"/>
      <enum name="roboto_bold_italic" value="27"/>
      <enum name="roboto_italic" value="28"/>
      <enum name="roboto_light" value="29"/>
      <enum name="roboto_light_italic" value="30"/>
      <enum name="roboto_medium" value="31"/>
      <enum name="roboto_medium_italic" value="32"/>
    </attr>
    <attr format="string" name="fontFile"/>

    <!-- Attributes for expandable text layout-->
    <attr format="boolean" name="expandable"/>
    <attr format="string" name="expandText"/>
    <attr format="color" name="expandTextColor"/>
    <attr format="enum" name="expandTextPosition">
      <enum name="left" value="0"/>
      <enum name="center" value="1"/>
      <enum name="right" value="2"/>
    </attr>

    <attr format="dimension" name="expandTextSize"/>
    <attr format="dimension" name="expandText_margin"/>
    <attr format="dimension" name="expandText_marginLeft"/>
    <attr format="dimension" name="expandText_marginRight"/>
    <attr format="dimension" name="expandText_marginTop"/>
    <attr format="dimension" name="expandText_marginBottom"/>
    <attr format="boolean" name="expandEllipsize"/>

    <!-- Attributes for auto fit-->
    <attr format="boolean" name="autoFit"/>
    <attr format="dimension" name="minTextSize"/>

    <!-- Attributes for counting text-->
    <attr format="boolean" name="countingText"/>
    <attr format="integer" name="countingText_startValue"/>
    <attr format="integer" name="countingText_endValue"/>
    <attr format="integer" name="countingText_interval"/>
    <attr format="integer" name="countingText_increment"/>
    <attr format="enum" name="countingText_format">
      <enum name="none" value="0"/>
      <enum name="comma" value="1"/>
      <enum name="commaWithZeros" value="2"/>
      <enum name="dot" value="3"/>
      <enum name="dotWithZeros" value="4"/>
    </attr>
  </declare-styleable>
</resources>
